                            zIndex: 999
                        });

                        // Reset input
                        $event.val('').focus();
                    } else {
                        $event.focus();
                    }
                });

            }
            else {
                alert("Calendar plugin is not installed");
            }
        },
            //init
            $.CalendarPage = new CalendarPage, $.CalendarPage.Constructor = CalendarPage
    }
